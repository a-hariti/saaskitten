{
  "name": "kit",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "prepare": "husky install",
    "db:gen": "drizzle-kit generate:pg",
    "db:migrate": "tsx ./drizzle/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "deploy": "npm run build && npm run db:gen && npm run db:migrate"
  },
  "devDependencies": {
    "@lucia-auth/adapter-postgresql": "^2.0.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/gtag.js": "^0.0.15",
    "@types/nodemailer": "^6.4.11",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "drizzle-orm": "^0.28.6",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "husky": "^8.0.3",
    "lucia": "^2.7.1",
    "mdsvex": "^0.11.0",
    "nodemailer": "^6.9.5",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "tsx": "^3.13.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "ws": "^8.14.2"
  },
  "type": "module",
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "bits-ui": "^0.5.7",
    "clsx": "^2.0.0",
    "formsnap": "^0.1.4",
    "lucide-svelte": "^0.279.0",
    "sveltekit-superforms": "^1.8.0",
    "tailwind-merge": "^1.14.0",
    "tailwind-variants": "^0.1.14",
    "zod": "^3.22.4"
  }
}
